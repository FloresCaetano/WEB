            <input type="text" class="form-control" name="idMedicamento" id="frmOperaciones" value="">
        </div>
        <div class="mb-3">
            <label for="codigo" class="form-label">Codigo</label>
            <input type="text" class="form-control" name="codigo" id="frmOperaciones" value="">
        </div>
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" name="nombre" id="frmOperaciones" value=" ">
        </div>
        <div class="mb-3">
            <label for="idLab" class="form-label">Id Lab</label>
            <input type="text" class="form-control" name="idLab" id="frmOperaciones" value=" ">
        </div>
        <div class="mb-3">
            <label for="idTipoMed" class="form-label">id Tipo med</label>
            <input type="text" class="form-control" name="idTipoMed" id="frmOperaciones" value=" ">
        </div>
        <div class="mb-3">
            <label for="uso" class="form-label">Uso</label>
            <input type="tel" class="form-control" name="uso" id="frmOperaciones" value=" ">
        </div><div class="mb-3">
            <label for="contenido" class="form-label">contenido</label>
