@{
    ViewData["Title"] = "Home Page";
}




<h1>Tipo Medicamento</h1>

<div class="modal fade" id="operacionesModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Formulario de Laboratorio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="frmOperaciones">
                    <div class="mb-3">
                        <label for="idTipoMedicamento" class="form-label">ID Laboratorio</label>
                        <input type="text" class="form-control" name="idTipoMedicamento" id="frmOperaciones" value="0" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="frmOperaciones" value=" ">
                    </div>
                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Dirección</label>
                        <input type="text" class="form-control" name="descripcion" id="frmOperaciones" value=" ">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="guardarTipoMedicamento()" data-bs-dismiss="modal" class="btn btn-success">Enviar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Salir</button>
            </div>
        </div>
    </div>
</div>


<fieldset class="p-4 border rounded-3">
    <legend class="fs-5 fw-bold">Filtrar</legend>
    <form id="frmFiltrar">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" name="txtNombre" id="frmOperaciones" value=" ">
        </div>
    </form>
    <button type="button" onclick="filtrarTipoMedicamento()" class="btn btn-success">Enviar</button>
    <button type="button" onclick="limpiarTipoMedicamento()" class="btn btn-secondary">Salir</button>
</fieldset>

<div id="divTable">

</div>

<script src="~/js/tipoMedicamento.js"></script>
<script src="~/js/queries.js"></script>